<Window x:Class="Info_G.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Info_G"
        mc:Ignorable="d"
        Title="" Height="170" Width="270"
        WindowStartupLocation="CenterOwner"
        Background="Bisque"
        ResizeMode="NoResize">
    <Grid>
        <Canvas>
            <Label
                Margin ="0 20 0 0"
                FontWeight="Bold" 
                FontSize="13" 
                Content="ARE YOU SURE TO DELETE THIS TOPIC?">
            </Label>
            <Button
                Margin ="10 60 0 0"
                Width="100" 
                Height="60" 
                FontWeight="Bold" 
                FontSize="20" 
                Background="Crimson" 
                Click="OnDelete_click">YES
            </Button>
            <Button 
                Margin ="135 60 0 0"
                Width="100" 
                Height="60" 
                FontWeight="Bold" 
                FontSize="20" 
                Background="Crimson" 
                Click="OnBack_Window_click">BACK
            </Button>
        </Canvas>
    </Grid>
</Window>
